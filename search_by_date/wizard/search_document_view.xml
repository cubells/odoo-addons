<openerp>
    <data>

        <record id="search_documents_view" model="ir.ui.view">
            <field name="name">search.documents.dates.form</field>
            <field name="model">search.documents.dates</field>
            <field name="arch" type="xml">
                <form string="Search Documents by Dates" version="7.0">
                    <separator colspan="4" string="Enter the date range:" />
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Search" name="search_document" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_search_invoice_documents"
            multi="True"
            key2="client_action_multi" name="Search Invoices by Date"
            res_model="search.documents.dates" src_model="account.invoice"
            view_mode="form" target="new" view_type="form" />
            
        <act_window id="action_search_sale_documents"
            multi="True"
            key2="client_action_multi" name="Search Sale Orders by Date"
            res_model="search.documents.dates" src_model="sale.order"
            view_mode="form" target="new" view_type="form" />
            
        <act_window id="action_search_purchase_documents"
            multi="True"
            key2="client_action_multi" name="Search Purchase Orders by Date"
            res_model="search.documents.dates" src_model="purchase.order"
            view_mode="form" target="new" view_type="form" />
        
        <act_window id="action_search_picking_out_documents"
            multi="True"
            key2="client_action_multi" name="Search Stock Pickings Out by Date"
            res_model="search.documents.dates" src_model="stock.picking.out"
            view_mode="form" target="new" view_type="form" />
            
        <act_window id="action_search_picking_out_documents"
            multi="True"
            key2="client_action_multi" name="Search Stock Pickings In by Date"
            res_model="search.documents.dates" src_model="stock.picking.in"
            view_mode="form" target="new" view_type="form" />   
            
        <act_window id="action_search_picking_out_documents"
            multi="True"
            key2="client_action_multi" name="Search Stock Pickings by Date"
            res_model="search.documents.dates" src_model="stock.picking"
            view_mode="form" target="new" view_type="form" /> 

    </data>
</openerp>
